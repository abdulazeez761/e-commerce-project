<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SecondProjectCore</title>

    <!-- Favicons -->
    <link href="~/assets1/img/favicon.png" rel="icon">
    <link href="~/assets1/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets1/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets1/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets1/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets1/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets1/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets1/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- Template Main CSS File -->
    <link href="~/assets1/css/style.css" rel="stylesheet">

    <style>
        .navbar {
            background-color: #fafbfc;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            transition: background-color 0.3s, border-bottom 0.3s;
            list-style:none;
        }



        .navbar-nav .nav-link {
            color: #696cff !important;
            font-size: 1rem;
            padding: 0.5rem 1rem;
            transition: color 0.3s, background-color 0.3s;
        }

            .navbar-nav .nav-link:hover {
          color: #888888 !important;
                border-radius: 0.25rem;
            }

        .navbar-nav .dropdown-menu {
            background-color: #ffffff;
            border: none;
            outline: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .navbar-nav .dropdown-menu .dropdown-item {
                color: #696cff !important;
                font-size: 0.9rem;
            }

                .navbar-nav .dropdown-menu .dropdown-item:hover {
                    background-color: #696cff;
                    color: #ffffff !important;
                }

        .avatar {
            position: relative;
            width: 2.375rem;
            height: 2.375rem;
            cursor: pointer;
            overflow: hidden;
            border-radius: 50%;
            transition: transform 0.3s;
            margin-right: 0.5rem; /* Adjust this value to move the avatar to the left */
        }

            .avatar img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .avatar:hover {
                transform: scale(1.1);
            }

        .navbar-right {
            display: flex;
            align-items: center;
            margin-right: 9rem; /* Adjust this value as needed to move the elements to the left */
        }


        .cart-icon {
            position: relative;
            display: flex;
            align-items: center;
            margin-right: 1rem; /* Adjust spacing if needed */
            font-size: 20px; /* Set the icon size */
            color: #696cff; /* Icon color */
            transition: color 0.3s, background-color 0.3s; /* Smooth color transitions */

        }


        .avatar {
            position: relative;
            display: inline-block;
        }

        .avatar {
            position: relative;
            display: inline-block;
        }

        .change-image-icon {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            display: none;
            z-index: 10;
            color: white;
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 50%;
            padding: 10px;
            cursor: pointer;
        }

        .avatar:hover .change-image-icon {
            display: block;
        }

        .avatar img {
            transition: opacity 0.3s;
        }

        .avatar:hover img {
            opacity: 0.7;
        }
        main {
            padding-top: 5rem; /* To prevent content from being hidden behind the fixed navbar */
        }
    </style>

</head>
@{
    @using System.Security.Claims
    @using ECommerceWebsite.Models.ViewModals

    var userID = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
    var userImage = User.FindFirst(CustomClaimTypes.UserImage)?.Value;
    var userName = User.FindFirst(ClaimTypes.Name)?.Value;
}
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Kelly Shop</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Products</a></li>
                    </ul>
                    <div class="navbar-right">
                        <li class="nav-item position-relative cart-icon">
                            <a class="nav-link" asp-controller="Cart" asp-action="Index">
                                <i class="bx bx-cart cart-icon" style="font-size:25px"></i>
                                <span style="
                                         background-color: #696cff;
                                         color: #fff;
                                         font-size: 0.75rem;
                                         padding: 0.25em 0.6em;
                                         border: 1px solid #696cff;
                                         box-shadow: 0 0 0.2rem rgba(0, 0, 0, 0.1);
                                         position: absolute;
                                         top: -8px;
                                         right: 4px;
                                         transform: translate(50%, -50%);
                                         border-radius: 50%; "
                                      class="badge rounded-pill">
                                    @(int.TryParse(Context.Session.GetString("CartCounter"), out int count) ? count : 0)
                                </span>
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                           <li class="nav-item navbar-dropdown dropdown-user dropdown">
                                <div class="avatar">
                                    <img src="~/images/usrProfileImages/@userImage" alt="User Photo" class="rounded-circle" id="profileImage" />
                                    <i class="fas fa-camera change-image-icon" onclick="document.getElementById('dropdownImageUpload').click()"></i>
                                    <form id="dropdownImageUploadForm" action="/Users/EditImage" method="post" enctype="multipart/form-data" style="display: none;">
                                        <input type="file" id="dropdownImageUpload" name="UserPhoto" style="display: none;" onchange="document.getElementById('dropdownImageUploadForm').submit()" accept="image/*" />
                                    </form>
                                </div>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar avatar-online me-3">
                                                    <img src="~/images/usrProfileImages/@userImage" alt="User Photo" class="rounded-circle" id="dropdownProfileImage" />
                                                </div>
                                                <div class="flex-grow-1">
                                                    <span class="fw-semibold d-block">@userName</span>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider"></div>
                                    </li>
                                    <li>
                                        <a asp-area="" asp-controller="Users" asp-action="EditUser" asp-route-id="@userID" class="dropdown-item">
                                            <i class="bx bx-cog me-2"></i>
                                            <span class="align-middle">Settings</span>
                                        </a>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider"></div>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                            <i class="bx bx-power-off me-2"></i>
                                            <span class="align-middle">Log Out</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>


                        }
                        else
                        {
                            <li class="nav-item"><a style="color:#696cff !important" class="nav-link" asp-controller="Account" asp-action="Register">Register</a></li>
                            <li class="nav-item"><a class="nav-link" style="color:#696cff !important" asp-controller="Account" asp-action="Login">Login</a></li>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="footer">
        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong><span>Kelly shop</span></strong>. All Rights Reserved
            </div>
            <div class="credits">

                Designed by <a style=" color:#696cff">Hellen AlJezzawi</a>
            </div>
        </div>
    </footer>


    <script>
        function submitImageForm(formId) {
            var form = document.getElementById(formId);
            var formData = new FormData(form);

            fetch(form.action, {
                method: 'POST',
                body: formData
            })
                .then(response => response.json())
                .then(data => {

                })
                .catch(error => {
                    console.error("Error:", error);
                    alert("Failed to upload image.");
                });
        }
    </script>


    <!-- Vendor JS Files -->
    <script src="~/assets1/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/assets1/vendor/aos/aos.js"></script>
    <script src="~/assets1/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets1/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets1/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets1/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets1/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="~/assets1/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets1/js/main.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
