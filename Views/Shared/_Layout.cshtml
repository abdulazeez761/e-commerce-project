    <script>
        function submitImageForm(formId) {
            var form = document.getElementById(formId);
            var formData = new FormData(form);

            fetch(form.action, {
                method: 'POST',
                body: formData
            })
                .then(response => response.json())
                .then(data => {

                })
                .catch(error => {
                    console.error("Error:", error);
                    alert("Failed to upload image.");
                });
        }
    </script>


