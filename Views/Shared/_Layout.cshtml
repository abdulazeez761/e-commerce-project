                </span>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Kelly Shop</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Products</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="GetInTouch">ContactUs</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs">AboutUs</a></li>
                    </ul>
                    <div class="navbar-right">
                        <li class="nav-item position-relative cart-icon">
                            <a class="nav-link" asp-controller="Cart" asp-action="Index">
                                <i class="bx bx-cart cart-icon" style="font-size:25px"></i>
                                <span style="
                                         background-color: #696cff;
                                         color: #fff;
                                         font-size: 0.75rem;
                                         padding: 0.25em 0.6em;
                                         border: 1px solid #696cff;
                                         box-shadow: 0 0 0.2rem rgba(0, 0, 0, 0.1);
                                         position: absolute;
                                         top: -8px;
                                         right: 4px;
                                         transform: translate(50%, -50%);
                                         border-radius: 50%; "
                                      class="badge rounded-pill">
                                    @(int.TryParse(Context.Session.GetString("CartCounter"), out int count) ? count : 0)
                                </span>
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                           <li class="nav-item navbar-dropdown dropdown-user dropdown">
                                <div class="avatar">
                                    <img src="~/images/usrProfileImages/@userImage" alt="User Photo" class="rounded-circle" id="profileImage" />
                                    <i class="fas fa-camera change-image-icon" onclick="document.getElementById('dropdownImageUpload').click()"></i>
                                    <form id="dropdownImageUploadForm" action="/Users/EditImage" method="post" enctype="multipart/form-data" style="display: none;">
                                        <input type="file" id="dropdownImageUpload" name="UserPhoto" style="display: none;" onchange="document.getElementById('dropdownImageUploadForm').submit()" accept="image/*" />
                                    </form>
                                </div>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar avatar-online me-3">
                                                    <img src="~/images/usrProfileImages/@userImage" alt="User Photo" class="rounded-circle" id="dropdownProfileImage" />
                                                </div>
                                                <div class="flex-grow-1">
                                                    <span class="fw-semibold d-block">@userName</span>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider"></div>
                                    </li>
                                    <li>
                                        <a asp-area="" asp-controller="Users" asp-action="EditUser" asp-route-id="@userID" class="dropdown-item">
