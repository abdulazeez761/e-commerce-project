    <style>
        .navbar {
            background-color: #fafbfc;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            transition: background-color 0.3s, border-bottom 0.3s;
            list-style:none;
        }



        .navbar-nav .nav-link {
            color: #696cff !important;
            font-size: 1rem;
            padding: 0.5rem 1rem;
            transition: color 0.3s, background-color 0.3s;
        }

            .navbar-nav .nav-link:hover {
          color: #888888 !important;
                border-radius: 0.25rem;
            }

        .navbar-nav .dropdown-menu {
            background-color: #ffffff;
            border: none;
            outline: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .navbar-nav .dropdown-menu .dropdown-item {
                color: #696cff !important;
                font-size: 0.9rem;
            }

                .navbar-nav .dropdown-menu .dropdown-item:hover {
                    background-color: #696cff;
                    color: #ffffff !important;
                }

        .avatar {
            position: relative;
            width: 2.375rem;
            height: 2.375rem;
            cursor: pointer;
            overflow: hidden;
            border-radius: 50%;
            transition: transform 0.3s;
            margin-right: 0.5rem; /* Adjust this value to move the avatar to the left */
        }

            .avatar img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .avatar:hover {
                transform: scale(1.1);
            }

        .navbar-right {
            display: flex;
            align-items: center;
            margin-right: 9rem; /* Adjust this value as needed to move the elements to the left */
        }


        .cart-icon {
            position: relative;
            display: flex;
            align-items: center;
            margin-right: 1rem; /* Adjust spacing if needed */
            font-size: 20px; /* Set the icon size */
            color: #696cff; /* Icon color */
            transition: color 0.3s, background-color 0.3s; /* Smooth color transitions */

        }


        .avatar {
            position: relative;
            display: inline-block;
        }

        .avatar {
            position: relative;
            display: inline-block;
        }

        .change-image-icon {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            display: none;
            z-index: 10;
            color: white;
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 50%;
            padding: 10px;
            cursor: pointer;
        }

        .avatar:hover .change-image-icon {
            display: block;
        }

        .avatar img {
            transition: opacity 0.3s;
        }

        .avatar:hover img {
            opacity: 0.7;
        }
        main {
            padding-top: 5rem; /* To prevent content from being hidden behind the fixed navbar */
        }
    </style>

</head>
@{
    @using System.Security.Claims
    @using ECommerceWebsite.Models.ViewModals

    var userID = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
    var userImage = User.FindFirst(CustomClaimTypes.UserImage)?.Value;
    var userName = User.FindFirst(ClaimTypes.Name)?.Value;
}
