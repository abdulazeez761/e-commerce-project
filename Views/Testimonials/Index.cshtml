@model IEnumerable<ECommerceWebsite.Models.Testimonial>
@{
    Layout = "_AdminLayout";
 
}


<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="card">
    <h5 class="card-header">Table Basic</h5>
    <div class="table-responsive text-nowrap">
     <table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>Action</th>
        </tr>
    </thead>
            <tbody class="table-border-bottom-0">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TestimonialID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TestimonialID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TestimonialID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
